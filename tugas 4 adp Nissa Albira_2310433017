#include <iostream>
#include <string>
#include <ctype.h>

using namespace std;

int main() {
  cout<<"Nama : Nissa Albira\n";
  cout<<"NIM  : 2310433017\n";
  cout<<"\nHaloo!"<<endl;
  cout<<"Berikut ini adalah program mengubah lirik lagu"<<endl;
  cout<<"----------------------------------------------\n";

  string liriklagu;

  cout << "\nMasukkan lirik lagu favorit kamu (cukup 3 kalimat aja): \n";
  getline(cin, liriklagu);

  cout << "\nLirik lagu yang sudah diubah: \n";

  for (int i = 0; i < 3; i++) {
    for (int j = 0; j < liriklagu.length(); j++) {
            char huruf = liriklagu[j];
    if (huruf == 'a' || huruf == 'i' || huruf == 'u' || huruf == 'e' || huruf == 'o' || huruf == 'A' || huruf == 'I' || huruf == 'U' || huruf == 'E' || huruf == 'O') {
        liriklagu[i] == 'i';
        liriklagu[j] = 'i';

      }
    }
  }

  cout << liriklagu << endl;

  return 0;

}
