#include <iostream>
#include <string>

using namespace std;

int main() {
  cout<<"Nama : Nissa Albira\n";
  cout<<"NIM  : 2310433017\n";
  cout<<"\nHaloo!"<<endl;
  cout<<"Berikut ini adalah program mengubah lirik lagu"<<endl;
  cout<<"----------------------------------------------\n";

  string liriklagu[3];

  cout << "\nMasukkan 3 baris lirik lagu favorit kamu: \n";
  for (int i = 0; i < 3; i++) {
    getline(cin, liriklagu[i]);
  }


  for (int i = 0; i < 3; i++) {
    for (int j = 0; j < liriklagu[i].length(); j++) {
      char huruf = liriklagu[i][j];
      if (huruf == 'a' || huruf == 'i' || huruf == 'u' || huruf == 'e' || huruf == 'o' || huruf == 'A' || huruf == 'I' ||huruf == 'U' || huruf == 'E' || huruf == 'O'){
        liriklagu[i][j] = 'i';
      }
    }
  }
  cout << "\nLirik lagu setelah diubah: \n";
  for (int i = 0; i < 3; i++) {
      cout << liriklagu[i] << endl;
  }

  return 0;
}
